# Railinc CLM Fixed-Width Schema
# Defines field positions for parsing CLM files

name: RAILINC_CLM
version: "1.0"

headerFields:
  - name: recordType
    start: 0
    end: 3
    description: "CLM"
  - name: messageType
    start: 3
    end: 6
    description: "LFR"
  - name: railroadCode
    start: 7
    end: 11
  - name: partnerName
    start: 12
    end: 22
  - name: sequenceNumber
    start: 24
    end: 37
