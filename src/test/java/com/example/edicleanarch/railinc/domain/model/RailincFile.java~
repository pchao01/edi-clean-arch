package com.example.edicleanarch.railinc.domain.model;

import com.example.edicleanarch.common.model.EdiFile;
import lombok.AccessLevel;
import lombok.AllArgsConstructor;
import lombok.Getter;
import org.springframework.beans.factory.annotation.Value;

import java.util.List;

/**
 * Domain Entity: Railinc CLM File
 * Represents a parsed Railinc Container Location Message file.
 */
@AllArgsConstructor(access = AccessLevel.PRIVATE)
public class RailincFile implements EdiFile {

    private static final String MESSAGE_TYPE = "RAILINC_CLM";

    @Getter
    private final RailincFileId id;

    @Getter
    private final FileHeader header;

    @Getter
    private final List<ContainerEvent> events;

    @Getter
    private final FileTrailer trailer;

    public static RailincFile withoutId(
            FileHeader header,
            List<ContainerEvent> events,
            FileTrailer trailer) {
        return new RailincFile(null, header, events, trailer);
    }

    @Override
    public String getMessageType() {
        return MESSAGE_TYPE;
    }

    @Override
    public int getRecordCount() {
        return events != null ? events.size() : 0;
    }

    @Override
    public boolean validateRecordCount() {
        if (trailer == null) return false;
        return getRecordCount() == trailer.recordCount();
    }

    public int getEventCount() {
        return getRecordCount();
    }

    @Value
    public static class RailincFileId {
        Long value;
    }

    public record FileHeader(
            String recordType,     // CLM
            String senderScac,
            String senderDuns,
            String receiverCode,
            String fileDateTime,
            String sequenceNumber
    ) {}

    public record FileTrailer(
            String recordType,     // EOM
            int recordCount
    ) {}
}
